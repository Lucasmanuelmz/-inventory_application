<%- include('partials/head/index.ejs')%>
<%-include('./admin/header/index.ejs')%>
<div class="relative overflow-x-auto shadow-md max-w-7xl mx-auto sm:rounded-lg">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Id
                </th>
                <th scope="col" class="px-6 py-3">
                    Category
                </th>
                <th scope="col" class="px-6 py-3">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            <%categories.forEach(category => {%>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
    
                <td class="px-6 py-4">
                    <%=category.id%>
                </td>
                <td class="px-6 py-4">
                 <%=category.name%>
                </td>
                <td class="px-6 py-4">
                    <form class="inline" action="/products/category/delete" method="post">
                        <input type="hidden" name="id" value="<%=category.id%>">
                        <button type="submit">Delete</button>
                    </form>
                    
                    <a href="/products/category/<%=category.id%>/update" class="py-3 px-5 cursor-pointer bg-indigo-800 hover:bg-indigo-700 focus:bg-indigo-900">Edit</a>
                </td>  
            </tr>
           <%})%> 
        </tbody>
    </table>
</div>      
<%-include('./admin/footer/index.ejs')%>