<%-include("../../partials/head/index.ejs")%>
<%-include("../header/index.ejs")%>
<div class="bg-gray-100 flex items-center justify-center min-h-screen">

  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-2xl">
      <h2 class="text-2xl font-bold mb-6 text-gray-800">Category Edit</h2>
      
      <form action="/products/category/update" method="post">
        <input type="hidden" name="id" value="<%=category.id%>">
          <div class="mb-4">
              <label for="name" class="block text-gray-700 font-semibold mb-2">Category name</label>
              <input type="text" id="name" name="name" value="<%=category.name%>"  required
                  class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
          </div>
          <button type="submit" class="px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-800 rounded-sm shadow-sm mt-3 bg-indigo-800 text-white hover:bg-indigo-700 focus:bg-indigo-900" >Update</button>
      </form>
  </div>
</div>
<%-include("../footer/index.ejs")%>